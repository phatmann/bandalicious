/     #error_explanation
/       %h2= "#{pluralize(@setlist.errors.count, "error")} prohibited this setlist from being saved:"
/       %ul
/         - @setlist.errors.full_messages.each do |msg|
/           %li= msg

/   = f.inputs :band
/   = f.buttons

%h2 Songs in list
%ul.sortable#selected_songs{'data-setlist_id' => @setlist.id}
  - for song in @setlist.songs
    %li[song]= song.name

%h2 Available Songs
%ul.sortable#available_songs
  - for song in @band.songs - @setlist.songs
    %li[song]= song.name
