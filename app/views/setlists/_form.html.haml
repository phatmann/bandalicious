.row#setlist
  .span6
    = simple_form_for [@band, @setlist], :html => {:class => 'form-stacked'} do |f|
      .inputs
        = f.input :name
        .clearfix
          = f.label 'Songs'
          .input
            .draggable-container
              %ul.draggable.sortable#selected-songs
                %li.empty No songs in setlist
                = render :partial => 'song', :collection => @setlist.songs
              / %p.help-block Drag songs to reorder.
      .actions
        = f.button :submit
  .span10
    .draggable-container#available-songs-container
      %p.help-block Drag songs to left to add to setlist.
      %ul.draggable.sortable#available-songs
        %li.empty No more songs to play!
        = render(:partial => 'song', :collection => @setlist.available_songs)
    



