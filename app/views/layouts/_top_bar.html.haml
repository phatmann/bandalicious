.topbar-wrapper
  .topbar
    .fill
      .container-fluid
        %h3
          = image_tag 'logo-sm.png'
          %a{:href=>'/'} Bandalicious
        - if current_band
          %ul.nav.secondary-nav
            %li{:class => controller_name == 'bands' ? 'active' : ''}
              = link_to current_band.name, edit_band_path(current_band)
            %li
              = link_to '[sign out]', :logout