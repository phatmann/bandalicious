!!! 5
%html
  %head
    = favicon_link_tag '/assets/logo-fav.png', :type => 'image/png'
    %title Bandaliscious - #{current_band ? current_band.name + ' -' : ''} #{yield(:title)}
    = stylesheet_link_tag "site", "bootstrap"
    = javascript_include_tag "application"
    
    / = stylesheet_link_tag "/stylesheets/ui-lightness/jquery-ui.css"
    
    = csrf_meta_tags
  %body
    = render "layouts/top_bar"
    .container
      = render 'layouts/notice'
      .page-header
        %h1= yield(:title)
      = yield
      = render 'layouts/footer'