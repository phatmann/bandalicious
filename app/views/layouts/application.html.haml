!!! 5
%html
  %head
    = favicon_link_tag '/assets/logo-fav.png', :type => 'image/png'
    %title Bandalicious - #{current_band ? current_band.name + ' -' : ''} #{yield(:title)}
    
    = stylesheet_link_tag "bootstrap", "site", :media => "all"
    = stylesheet_link_tag "print", :media => "print"
    = stylesheet_link_tag "/stylesheets/jquery-ui/ui-darkness/jquery-ui.css"

    = javascript_include_tag "application"
    
    = csrf_meta_tags
  %body
    = render "layouts/top_bar"
    .container
      = render 'layouts/notice'
      = render 'layouts/tabs'
      .content{:class => controller_name}
        %h1= yield(:title)
        = yield
    = render 'layouts/footer'