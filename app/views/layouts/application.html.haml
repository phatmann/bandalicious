!!! 5
%html
  %head
    = favicon_link_tag '/assets/logo-fav.png', :type => 'image/png'
    %title Bandalicious - #{current_band ? current_band.name + ' -' : ''} #{yield(:title)}
    
    = stylesheet_link_tag "site", :media => "all"
    = stylesheet_link_tag "print", :media => "print"

    = javascript_include_tag "application"
    
    = csrf_meta_tags
  %body
    = render "layouts/top_bar"
    .container-fluid
      .row-fluid
        .span12
          = render 'layouts/notice'
          = render 'layouts/tabs'
      .row-fluid
        .span12
          .page-header
            %h1= yield :title
            .stats= yield :stats
      - if yield(:sidebar).blank?
        .row-fluid
          .span12= yield
      - else
        .row-fluid{:class => controller_name}
          .span2
            .well= yield :sidebar
          .span10= yield
    = render 'layouts/footer'